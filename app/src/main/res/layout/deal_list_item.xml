<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="16dp"
            android:id="@+id/deal_icon"
            android:src="@drawable/ic_drinks_placeholder"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="$200 beers"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:id="@+id/deal_title"
            android:layout_toEndOf="@+id/deal_icon"
            android:layout_alignTop="@id/deal_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Trent&apos;s House of Bacon"
            android:id="@+id/restaurant_name"
            android:textSize="14sp"
            android:layout_below="@+id/deal_title"
            android:layout_toEndOf="@+id/deal_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="92%"
            android:id="@+id/deal_rating"
            android:paddingRight="16dp"
            android:textSize="14sp"
            android:layout_alignBaseline="@id/restaurant_name"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="2.3 mi"
            android:textSize="14sp"
            android:paddingRight="16dp"
            android:paddingBottom="20dp"
            android:id="@+id/deal_distance"
            android:layout_alignBottom="@+id/deal_icon"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="2-3pm"
            android:textSize="14sp"
            android:paddingBottom="20dp"
            android:id="@+id/deal_availability"
            android:layout_toEndOf="@+id/deal_icon"
            android:layout_alignBottom="@+id/deal_icon" />


    </RelativeLayout>


</LinearLayout>